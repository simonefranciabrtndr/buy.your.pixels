# Porta su cui avviare il server Express
PORT=4000

# URL/i del frontend autorizzati per il CORS (separa con virgole). Usa "*" per permettere tutti.
APP_BASE_URL=http://localhost:5173,https://buy-your-pixels.vercel.app

# Dimensioni in pixel della board principale (per calcolare i totali)
BOARD_WIDTH=1200
BOARD_HEIGHT=900

# Connessione Postgres (Railway, Supabase, ecc.)
DATABASE_URL=postgres://user:password@host:5432/dbname

# Stripe
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_key

# PayPal
PAYPAL_CLIENT_ID=paypal_client_id
PAYPAL_CLIENT_SECRET=paypal_client_secret
# Valori possibili: sandbox | live
PAYPAL_ENV=sandbox
