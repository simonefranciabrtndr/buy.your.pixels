body {
  margin: 0;
  padding: 0;
  overflow: hidden;
  background: radial-gradient(circle at center, #0b0e15 0%, #07090f 100%);
  color: #fff;
  font-family: "SF Pro Display", -apple-system, BlinkMacSystemFont, sans-serif;
}

canvas {
  display: block;
}

.selection-rect {
  position: absolute;
  border: 2px solid rgba(255,165,0,0.8);
  background: rgba(255,165,0,0.25);
  pointer-events: none;
}

.grid-container {
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.grid-canvas {
  background-color: #0b0e15;
  cursor: crosshair;
}

/* Transizione popup di selezione */
.selection-popup {
  position: fixed;
  top: 5%;
  right: 3%;
  background: rgba(255,255,255,0.08);
  backdrop-filter: blur(20px);
  border-radius: 24px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.35), 0 0 18px rgba(255,165,0,0.4);
  padding: 26px 28px;
  color: white;
  transition: all 0.3s ease;
}

.close-btn {
  position: absolute;
  top: -14px;
  right: -14px;
  width: 32px;
  height: 32px;
  border: none;
  border-radius: 50%;
  background: rgba(255,255,255,0.12);
  color: white;
  font-size: 18px;
  cursor: pointer;
  backdrop-filter: blur(14px);
  box-shadow: 0 0 14px rgba(255,165,0,0.8);
  transition: all 0.25s ease-in-out;
}

.close-btn:hover {
  background: rgba(255,255,255,0.25);
  transform: scale(1.08);
}

/* === LIQUID GLASS iOS26 STYLE === */

.selection-popup {
  position: fixed;
  top: 5%;
  right: 3%;
  min-width: 360px;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 26px;
  padding: 28px 30px 34px 30px;
  box-shadow:
    inset 0 1px 1px rgba(255,255,255,0.35),
    0 0 25px rgba(0,0,0,0.6),
    0 0 40px rgba(255,255,255,0.05),
    0 0 25px rgba(255,165,0,0.25);
  backdrop-filter: blur(28px) saturate(180%) brightness(1.15);
  -webkit-backdrop-filter: blur(28px) saturate(180%) brightness(1.15);
  color: rgba(255,255,255,0.95);
  text-shadow: 0 0 12px rgba(255,255,255,0.15);
  font-family: "SF Pro Display", -apple-system, BlinkMacSystemFont, sans-serif;
  transition: all 0.35s ease-in-out;
  border: 1px solid rgba(255,255,255,0.15);
}

.selection-popup h3 {
  margin: 0 0 14px 0;
  font-size: 20px;
  font-weight: 600;
  color: rgba(255,255,255,0.95);
  text-align: center;
}

.selection-popup input {
  width: 100%;
  background: rgba(255,255,255,0.12);
  border: 1px solid rgba(255,255,255,0.25);
  border-radius: 14px;
  color: rgba(255,255,255,0.95);
  font-size: 16px;
  padding: 10px 14px;
  text-align: center;
  backdrop-filter: blur(22px);
  transition: all 0.3s ease;
}
.selection-popup input::placeholder {
  color: rgba(255,255,255,0.45);
}
.selection-popup input:focus {
  outline: none;
  border-color: rgba(255,165,0,0.7);
  background: rgba(255,255,255,0.18);
}

/* === BUTTONS === */
.selection-popup button {
  background: linear-gradient(145deg, rgba(52,120,255,0.9), rgba(0,102,255,0.7));
  border: none;
  border-radius: 14px;
  color: #fff;
  padding: 10px 22px;
  margin: 10px 8px 0 8px;
  font-weight: 600;
  font-size: 15px;
  box-shadow:
    0 0 18px rgba(0,102,255,0.3),
    inset 0 1px 2px rgba(255,255,255,0.4);
  cursor: pointer;
  backdrop-filter: blur(22px);
  transition: all 0.25s ease-in-out;
}
.selection-popup button:hover {
  transform: scale(1.06);
  box-shadow:
    0 0 24px rgba(255,165,0,0.6),
    inset 0 1px 3px rgba(255,255,255,0.5);
  background: linear-gradient(145deg, rgba(255,165,0,0.9), rgba(255,120,0,0.75));
}
.selection-popup button:active {
  transform: scale(0.96);
}

/* === CLOSE BUTTON === */
.selection-popup .close-btn {
  position: absolute;
  top: -14px;
  right: -14px;
  width: 34px;
  height: 34px;
  background: rgba(255,255,255,0.12);
  border-radius: 50%;
  color: white;
  font-size: 18px;
  cursor: pointer;
  border: 1px solid rgba(255,255,255,0.15);
  box-shadow:
    0 0 14px rgba(255,165,0,0.85),
    inset 0 1px 1px rgba(255,255,255,0.3);
  backdrop-filter: blur(18px) saturate(160%);
  transition: all 0.25s ease-in-out;
}
.selection-popup .close-btn:hover {
  background: rgba(255,255,255,0.25);
  transform: scale(1.08);
}

/* === FIX CLOSE BUTTON CIRCLE === */
.selection-popup .close-btn {
  position: absolute;
  top: -14px;
  right: -14px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.12);
  border: 1px solid rgba(255, 255, 255, 0.18);
  color: white;
  font-size: 18px;
  font-weight: 500;
  cursor: pointer;
  text-align: center;
  line-height: 1;
  box-shadow:
    0 0 12px rgba(255,165,0,0.8),
    inset 0 1px 2px rgba(255,255,255,0.25);
  backdrop-filter: blur(18px) saturate(160%);
  transition: all 0.25s ease-in-out;
}

.selection-popup .close-btn:hover {
  background: rgba(255,255,255,0.25);
  transform: scale(1.08);
  box-shadow:
    0 0 20px rgba(255,165,0,0.9),
    inset 0 1px 3px rgba(255,255,255,0.35);
}

.selection-popup .close-btn:active {
  transform: scale(0.94);
}

/* === ELEGANT LIQUID CLOSE BUTTON === */
.selection-popup .close-btn {
  position: absolute;
  top: -16px;
  right: -16px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 38px;
  height: 38px;
  border-radius: 50%;
  font-size: 17px;
  font-weight: 400;
  color: rgba(255,255,255,0.92);
  cursor: pointer;
  background: rgba(255,255,255,0.08);
  border: 1px solid rgba(255,255,255,0.25);
  box-shadow:
    0 0 18px rgba(255,165,0,0.55),
    inset 0 1px 2px rgba(255,255,255,0.35);
  backdrop-filter: blur(20px) saturate(160%);
  -webkit-backdrop-filter: blur(20px) saturate(160%);
  transition: all 0.3s ease-in-out;
  text-shadow: 0 0 6px rgba(255,255,255,0.25);
}

.selection-popup .close-btn:hover {
  transform: scale(1.08);
  background: rgba(255,255,255,0.18);
  box-shadow:
    0 0 28px rgba(255,165,0,0.75),
    inset 0 1px 3px rgba(255,255,255,0.4);
  color: rgba(255,255,255,1);
}

.selection-popup .close-btn:active {
  transform: scale(0.95);
  background: rgba(255,255,255,0.25);
  box-shadow:
    0 0 14px rgba(255,165,0,0.5),
    inset 0 2px 4px rgba(255,255,255,0.25);
}

/* === LIQUID GLASS POP-UP (iOS26 / iPhone 17 Pro aesthetic) === */
.selection-popup {
  position: fixed;
  top: 40px;
  right: 40px;
  width: 340px;
  min-height: 180px;
  border-radius: 28px;
  padding: 28px 30px 36px 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;

  /* Liquid glass background */
  background: rgba(18, 18, 18, 0.45);
  backdrop-filter: blur(24px) saturate(160%);
  -webkit-backdrop-filter: blur(24px) saturate(160%);
  border: 1px solid rgba(255, 255, 255, 0.15);
  box-shadow:
    0 8px 32px rgba(0, 0, 0, 0.4),
    0 0 20px rgba(255,165,0,0.35),
    inset 0 0 8px rgba(255,255,255,0.05);
  color: rgba(255,255,255,0.9);
  font-family: "SF Pro Display", -apple-system, BlinkMacSystemFont, sans-serif;
  transition: all 0.35s ease-in-out;
}

/* Inner text layout */
.selection-popup h3,
.selection-popup div,
.selection-popup p {
  margin: 6px 0;
  color: rgba(255,255,255,0.9);
  letter-spacing: 0.3px;
  text-shadow: 0 0 8px rgba(255,255,255,0.15);
}

/* BUY button */
.selection-popup .popup-buy {
  margin-top: 18px;
  background: linear-gradient(135deg, rgba(0,122,255,0.95), rgba(30,144,255,0.85));
  border: none;
  border-radius: 14px;
  padding: 10px 24px;
  font-size: 16px;
  font-weight: 600;
  color: white;
  cursor: pointer;
  box-shadow:
    0 0 16px rgba(0,122,255,0.55),
    inset 0 0 6px rgba(255,255,255,0.25);
  transition: all 0.3s ease;
}
.selection-popup .popup-buy:hover {
  background: linear-gradient(135deg, rgba(30,144,255,1), rgba(0,122,255,1));
  transform: scale(1.05);
  box-shadow:
    0 0 28px rgba(0,122,255,0.8),
    inset 0 0 8px rgba(255,255,255,0.35);
}

/* Elegant close button */
.selection-popup .close-btn {
  position: absolute;
  top: -16px;
  right: -16px;
  width: 38px;
  height: 38px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  color: rgba(255,255,255,0.9);
  cursor: pointer;
  background: rgba(255,255,255,0.1);
  border: 1px solid rgba(255,255,255,0.2);
  box-shadow:
    0 0 20px rgba(255,165,0,0.5),
    inset 0 1px 2px rgba(255,255,255,0.25);
  backdrop-filter: blur(20px) saturate(150%);
  transition: all 0.3s ease-in-out;
}
.selection-popup .close-btn:hover {
  transform: scale(1.1);
  background: rgba(255,255,255,0.2);
  box-shadow:
    0 0 26px rgba(255,165,0,0.8),
    inset 0 1px 3px rgba(255,255,255,0.35);
}
.selection-popup .close-btn:active {
  transform: scale(0.95);
  background: rgba(255,255,255,0.25);
}

/* Optional: glowing border animation */
@keyframes subtle-glow {
  0% { box-shadow: 0 0 20px rgba(255,165,0,0.35); }
  50% { box-shadow: 0 0 26px rgba(255,165,0,0.6); }
  100% { box-shadow: 0 0 20px rgba(255,165,0,0.35); }
}
.selection-popup {
  animation: subtle-glow 4s ease-in-out infinite;
}
